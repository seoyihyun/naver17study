package day1212;

public class Ex5Operator {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 조건(삼항)연산자 : 조건식1 ? T : F (값)
		// 조건이 n개일 경우 : 조건식1 ? T(조건식2)? T(조건식3)? T : F
		
		int x,y,max;
		x=5;
		y=13;
		
		max=x>y?x:y;
		System.out.println("max="+max);
		
		int z=20;
		max=x>y&&x>z?x:y>x&&y>z?y:z;
		System.out.println("max="+max);

	}

}
