package day1218;

import java.util.Date;

public class FormatExam {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		// 생각나는김에 배움 .. 
		
		Date date = new Date();
		System.out.println(date); // Wed Dec 18 15:54:39 KST 2024
		
		SimpleDataFormat sdf1 = new SimpleDataFormat("yyyy-MM-dd HH:mm");
		// M:월, m:분 H:24시간, h:12시간, E:요일, a:오전/오후 
		SimpleDataFormat sdf2 = new SimpleDataFormat("yyyy-MM-dd a hh:mm");
		SimpleDataFormat sdf3 = new SimpleDataFormat("yyyy년MM월dd HH:mm EEE");
		SimpleDataFormat sdf4 = new SimpleDataFormat("yyyy-MM-dd HH:mm EEEE");
		System.out.println(date);
		
		

	}

}
